<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="CustomDialogAnimation1">
        <item name="android:windowEnterAnimation">@anim/slide_top_dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightsilver</item>
        <item name="colorControlActivated">#60b243</item>
    </style>

        <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
            <item name="android:progressDrawable">@drawable/gg</item>
            <item name="android:minHeight">23dip</item>
            <item name="android:maxHeight">25dip</item>
        </style>
    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sfpro_text_heavy</item>
    </style>

    <style name="expandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sfpro_text_heavy</item>
    </style>


    <style name="TextStyleBNV">
        <item name="android:textSize">12.7sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/sfpro_display_semibold</item>
    </style>

</resources>
