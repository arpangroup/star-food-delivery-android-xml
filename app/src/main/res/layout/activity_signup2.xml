<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignUp2Activity">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fdf9f2"
                    android:orientation="vertical"
                    android:paddingBottom="35dp">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/back" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="32.6dp"
                        android:layout_marginRight="38dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_text_heavy"
                                android:text="@string/create_account"
                                android:textColor="@color/black"
                                android:textSize="18.7sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/sfpro_text_regular"
                                android:text="Create an account with the new phone \n number"
                                android:textColor="@color/silver"
                                android:textSize="12.7sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_coffee_cup" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="21.3dp"
                android:layout_marginTop="36.3dp"
                android:layout_marginRight="16.7dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transferent"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="8160023156"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="13.3sp"
                    android:layout_marginLeft="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7.7dp"
                    android:background="@color/lightsilver" />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:background="@color/transferent"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="kvn Patel"
                    android:inputType="text"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="13.3sp"
                    android:layout_marginLeft="5dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7.7dp"
                    android:background="@color/lightsilver" />

                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:background="@color/transferent"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:hint="kevin@wolfsoft.in"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="13.3sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7.7dp"
                    android:background="@color/lightsilver" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/transferent"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="....................."
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp" />

                    <FrameLayout
                        android:id="@+id/frame_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <ImageView
                            android:id="@+id/password_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_eye2"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/password_hide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_eye1"
                            android:visibility="visible"/>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-8dp"
                    android:background="@color/lightsilver" />

                <LinearLayout
                    android:id="@+id/checkbox_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33.3dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:background="@drawable/checkbox_rect"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/tick"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_tick"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9.3dp"
                        android:fontFamily="@font/sfpro_text_medium"
                        android:text="I have referral code"
                        android:textColor="@color/silver"
                        android:textSize="13.3sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_marginLeft="16.7dp"
        android:layout_marginRight="16.7dp"
        android:layout_marginBottom="11.8dp"
        android:background="@drawable/ripple"
        android:fontFamily="@font/sfpro_text_medium"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:text="@string/create_account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18.3sp" />

    <TextView
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="17.7dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/sfpro_display_medium"
        android:letterSpacing="0.0525"
        android:text="@string/by_creating_account_you_accept_terms_and_conditions"
        android:textColor="@color/black"
        android:textSize="12sp" />
</LinearLayout>
