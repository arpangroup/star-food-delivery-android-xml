<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="22dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nonveg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_nonveg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/biryani_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfpro_display_medium"
            android:letterSpacing="0.0525"
            android:lineSpacingExtra="2dp"
            android:text="@string/panner_txt"
            android:textColor="@color/black"
            android:textSize="15.5sp" />

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sfpro_display_regular"
            android:letterSpacing="0.0525"
            android:lineSpacingExtra="2dp"
            android:text="Long grain basmati rice cooked to\nperfection and blended authentic Indian\nherbs and soft paneer pieces - a perfect\nmeal…."
            android:textColor="@color/silver"
            android:textSize="12.7sp"
            app:trimExpandedText="show More"
            app:trimCollapsedText="show Less"
            app:trimMode="trimModeLength"
            app:colorClickableText="@color/green"
            app:trimLength="80"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_display_semibold"
                android:letterSpacing="0.0525"
                android:text="₹"
                android:textColor="@color/blue"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_display_medium"
                android:letterSpacing="0.0525"
                android:layout_marginLeft="5dp"
                android:text="142"
                android:textColor="@color/blue"
                android:textSize="13.3sp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/add_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_gray_border"
            android:fontFamily="@font/sfpro_display_medium"
            android:paddingLeft="25dp"
            android:paddingTop="4.5dp"
            android:paddingRight="25dp"
            android:paddingBottom="6.5dp"
            android:text="+ Add"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/add_cart_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_silver_border"
            android:orientation="horizontal"
            android:paddingTop="4.5dp"
            android:paddingBottom="6.5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/minus_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_display_medium"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/increase_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_display_medium"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/plus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_display_medium"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
