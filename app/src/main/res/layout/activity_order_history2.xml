<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".OrderHistory2Activity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp">

        <include layout="@layout/toolbar_orderhistory2" />
    </android.support.v7.widget.CardView>
    <!--Recycler View Used-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/orderHistory_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.7dp"
        android:layout_marginRight="16.3dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="30dp"
        android:paddingBottom="16.7dp" />
</LinearLayout>