<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/opRoad_txt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OP ROAD, AKOTA"
            android:textSize="12.5sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sfpro_text_medium"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star_green"
            android:layout_gravity="center"
            android:layout_marginRight="7.1dp"/>
        <TextView
            android:id="@+id/rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.2"
            android:textSize="12.3sp"
            android:textColor="@color/green"
            android:layout_marginRight="21dp"
            android:fontFamily="@font/sfpro_display_semibold"/>
        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 MINS"
            android:textSize="12.3sp"
            android:textColor="@color/silver"
            android:fontFamily="@font/sfpro_display_medium"/>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/viewline"
        android:layout_marginTop="18.2dp"/>
</LinearLayout>