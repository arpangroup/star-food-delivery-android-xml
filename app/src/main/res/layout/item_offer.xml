<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="9dp"
    android:layout_marginBottom="44dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/birani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/birani1" />

    <TextView
        android:id="@+id/rice_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.7dp"
        android:fontFamily="@font/sfpro_display_medium"
        android:text="Basmati Rice Lunchbox"
        android:textColor="#90959f"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/paneer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:fontFamily="@font/sfpro_display_semibold"
        android:text="Paneer Biryani"
        android:textColor="#1c1a2f"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/sfpro_display_medium"
            android:text="â‚¹ 220"
            android:textColor="#2546b0"
            android:textSize="13.3sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_item_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_gray_border"
                android:fontFamily="@font/sfpro_display_medium"
                android:paddingLeft="25dp"
                android:paddingTop="6dp"
                android:paddingRight="25dp"
                android:paddingBottom="8dp"
                android:text="+ Add"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/add_cart_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_silver_border"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/minus_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_display_medium"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/increase_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_display_medium"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/plus_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_display_medium"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>