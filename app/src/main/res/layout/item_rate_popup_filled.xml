<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:overScrollMode="never"
    tools:context=".RateFiledPopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="16.7dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="18.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfpro_text_semibold"
            android:letterSpacing="0.0525"
            android:text="@string/rate_your_food_brown_burger_co"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:theme="@style/RatingBar" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="17.2dp"
            android:background="@color/viewline" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23.3dp"
            android:fontFamily="@font/sfpro_text_semibold"
            android:letterSpacing="0.0525"
            android:text="@string/what_did_you_like_the_best"
            android:textColor="@color/black"
            android:textSize="11.3sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.7dp"
            android:weightSum="2"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/taste_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8.3dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_gray_border"
                android:fontFamily="@font/sfpro_text_semibold"
                android:letterSpacing="0.0525"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="TASTE"
                android:textColor="@color/gray"
                android:textSize="11.3dp" />

            <TextView
                android:id="@+id/portion_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_gray_border"
                android:fontFamily="@font/sfpro_text_semibold"
                android:letterSpacing="0.0525"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="PORTION SIZE"
                android:textColor="@color/gray"
                android:textSize="11.3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="9.3dp">

            <TextView
                android:id="@+id/food_txt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8.3dp"
                android:background="@drawable/rectangle_gray_border"
                android:fontFamily="@font/sfpro_text_semibold"
                android:letterSpacing="0.0525"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:paddingRight="0dp"
                android:paddingBottom="14dp"
                android:text="@string/food_packaging"
                android:textColor="@color/gray"
                android:textSize="11.3dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="23.5dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.8dp"
            android:fontFamily="@font/sfpro_text_semibold"
            android:text="RATE DELIVERY BOY PATHAN SANJANKAR"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/RatingBar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18.7dp"
            android:background="@color/silver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29.2dp"
            android:fontFamily="@font/sfpro_text_medium"
            android:letterSpacing="0.0525"
            android:text="@string/got_any_other_suggestions_let_us_know"
            android:textColor="@color/gray"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="@color/viewline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23.5dp"
            android:background="@drawable/rectangle_orange"
            android:fontFamily="@font/sfpro_text_medium"
            android:paddingTop="13.3dp"
            android:paddingBottom="13dp"
            android:text="@string/rate_delivery"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18.3sp" />

    </LinearLayout>
</ScrollView>