<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="9dp"
    android:layout_marginBottom="9dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/food_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/image_home3" />

            <ImageView
                android:id="@+id/shado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/image_shado" />
        </FrameLayout>

        <TextView
            android:id="@+id/restaurants_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IN 20 RESTAURANTS"
            android:textSize="8sp"
            android:textColor="#000000"
            android:layout_marginLeft="7.3dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8.9dp"
            android:fontFamily="@font/sfpro_display_medium"/>

        <TextView
            android:id="@+id/discount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45% OFF!"
            android:textSize="13.3sp"
            android:textColor="#000000"
            android:layout_marginLeft="7.3dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="34dp"
            android:fontFamily="@font/sfpro_display_heavy"/>
        <TextView
            android:id="@+id/coupon_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COUPON ‘STAR200’"
            android:textSize="13.3sp"
            android:textColor="#000000"
            android:layout_marginLeft="7.3dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sfpro_display_heavy"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="OFFER"
            android:textSize="7.3sp"
            android:background="@drawable/rectangle_white"
            android:paddingBottom="1.2dp"
            android:paddingTop="1dp"
            android:paddingLeft="3.3dp"
            android:paddingRight="3.3dp"
            android:layout_marginTop="10.7dp"
            android:layout_marginLeft="12dp"
            android:letterSpacing="0.1"
            android:fontFamily="@font/sfpro_display_regular"/>
    </FrameLayout>


</LinearLayout>