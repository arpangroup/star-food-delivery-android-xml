<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dishes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.3dp"
            android:fontFamily="@font/sfpro_display_semibold"
            android:text="@string/dishesM"
            android:textSize="13.3dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dotted_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="22dp"
            android:layerType="software"
            android:src="@drawable/dotted" />

        <LinearLayout
            android:id="@+id/dosh_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dosa_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/sfpro_display_semibold"
                android:text="Sada dosa"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <View
                android:id="@+id/viewline"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_marginTop="19.5dp"
                android:background="@color/viewline" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>